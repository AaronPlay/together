    <TextView
        android:id="@+id/title_item"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:text="三亚"
        />
    <TextView
        android:id="@+id/detail_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有热带风情美女,海鲜"
        android:layout_below="@id/title_item"/>
    <ImageView
        android:id="@+id/list_card_photo"
        android:layout_below="@+id/detail_item"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/list_card_photo"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/good_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="点赞 31"/>
        <TextView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="评论 2"
            android:gravity="center" />
        </LinearLayout>
</RelativeLayout>